<div class="login-box">
    <div class="login-logo">
        <img src="{{ asset(theme.logo) }}" class="img-responsive" />
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">{{ "login.title"|trans({}, 'messages') }}</p>
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {% if error %}
            <div class="alert alert-danger"><i class="icon fa fa-ban"></i> {{ error.messageKey|trans(error.messageData, 'messages') }}</div>
            {% endif %}
            <div class="form-group has-feedback {% if error %}has-error{% endif %}">
                <input type="text" class="form-control" name="_username" placeholder="{{ "login.email"|trans({}, 'messages') }}"/>
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback {% if error %}has-error{% endif %}">
                <input type="password" class="form-control" name="_password" placeholder="{{ "login.password"|trans({}, 'messages') }}"/>
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="_remember_me" value="on"> {{ "login.remember"|trans({}, 'messages') }}
                        </label>
                    </div>
                </div><!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-success btn-block btn-flat {{ theme.primaryColor }}">{{ "login.login"|trans({}, 'messages') }}</button>
                </div><!-- /.col -->
            </div>
        </form>

        <div class="row">
            <div class="col-xs-6"><a href="#">{{ "login.lostpassword"|trans({}, 'messages') }}</a><br></div>
            <div class="col-xs-6 text-right text-sm">Version: {{ version }}</div>
        </div>

    </div><!-- /.login-box-body -->
</div>
