{% extends 'TimeTrackingThemeBundle:Layout:simple.html.twig' %}

{% block sidebar %}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/avanzuadmintheme/static/'~ app.environment ~'/styles/admin-lte-all.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/timeTrackingadmin/plugins/bootstrap-switch/bootstrap-switch.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/timeTrackingadmin/plugins/jquery-multiselect/css/multi-select.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/timeTrackingadmin/css/custom.css') }}" />
{% endblock %}

{% block title %}{{ "site.title"|trans }}{% endblock %}
{% block page_title %}{{ "site.title"|trans }}{% endblock %}
{% block page_subtitle %}{{ "site.subtitle"|trans }}{% endblock %}

{% block avanzu_logo %}
    <a href="#" class="logo">
        <!-- Add the class icon to your logo image or logo icon to add the margining -->
        <img src="{{ asset("bundles/timeTrackingadmin/img/logo.png") }}" class="icon" width="50" alt="TimeTracking">
    </a>
{% endblock %}

{% block avanzu_breadcrumb %}
    {# render(controller('AvanzuAdminThemeBundle:Breadcrumb:breadcrumb', {'request':app.request, 'title' : block('page_title')})) #}
{% endblock %}

{% block avanzu_admin_footer %}
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> {{ version }}
        </div>
        <strong>Copyright &copy; {{ "now"|date('Y') }} <a href="https://cwd.at">cwd.at GmbH</a>.</strong> All rights reserved.
    </footer>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/timeTrackingadmin/plugins/bootstrap-switch/bootstrap-switch.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/timeTrackingadmin/scripts/main.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/timeTrackingadmin/plugins/jquery-multiselect/js/jquery.multi-select.js') }}"></script>

    {{ cwd_froala_javascript() }}

    <script>
        var translations = {
            confirm_delete: '{{ 'generic.confirm_delete'|trans|raw }}'
        };
    </script>
{% endblock %}
